<%- include("../partials/header") %>
<h1 style="text-align: center;">Add New Comment to <%= article.name %> </h1>
<div class="row justify-content-center">
    <div class="col-xs-12 col-lg-6">
        <form action="/campgrounds/<%= article._id %>/comments " method="POST">
            <div class="form-group">
                <label for="name">Comment</label>
                <input type="text" class="form-control" name="comment[text]" id="name" placeholder="Enter Your Comment">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block">
            </div>

        </form>
        <a href="/campgrounds">Go Back</a>
    </div>

</div>